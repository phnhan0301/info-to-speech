{
  "name": "info-tts",
  "version": "0.0.0",
  "main": "lib/info-tts.js",
  "description": "A node service to check weather info periodically and speak out loud",
  "homepage": "http://naustud.io",
  "bugs": "https://github.com/trongthanh/info-tts/issues",
  "author": {
    "name": "Thanh Tran",
    "email": "trongthanh@gmail.com",
    "url": "http://int3ractive.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trongthanh/info-tts"
  },
  "license": "MIT",
  "files": [
    "lib"
  ],
  "keywords": [
    "info-tts",
    "text-to-speech",
    "weather",
    "time",
    "news"
  ],
  "devDependencies": {
    "grunt-contrib-jshint": "^0.10.0",
    "grunt-contrib-nodeunit": "^0.3.3",
    "grunt-contrib-watch": "^0.6.1",
    "load-grunt-tasks": "^0.4.0",
    "time-grunt": "^0.3.1",
    "grunt-mocha-cli": "^1.9.0",
    "jshint-stylish": "^0.2.0"
  },
  "scripts": {
    "test": "grunt"
  },
  "main": "app.js",
  "bin": {
    "info-tts": "cli.js"
  },
  "preferGlobal": "true",
  "dependencies": {
    "afplay": "^1.0.2",
    "request": "^2.69.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "block-scoped-var"    : 1,
      "camelcase"           : 2,
      "comma-style"         :[2, "last" ],
      "comma-dangle"        : 2,
      "comma-spacing"       :[2, { "before": false, "after": true} ],
      "curly"               :[2, "all" ],
      "dot-notation"        :[2, { "allowKeywords": true } ],
      "eqeqeq"              :[2, "allow-null" ],
      "indent"              :[2, "tab" ],
      "linebreak-style"     :[2, "unix" ],
      "new-cap"             :[2, { "capIsNew": false } ],
      "no-bitwise"          : 2,
      "no-caller"           : 2,
      "no-console"          : 0,
      "no-eval"             : 2,
      "no-invalid-this"     : 0,
      "no-iterator"         : 2,
      "no-loop-func"        : 2,
      "no-multi-str"        : 2,
      "no-new"              : 2,
      "no-proto"            : 2,
      "no-script-url"       : 2,
      "no-sequences"        : 2,
      "no-shadow"           : 2,
      "no-with"             : 2,
      "one-var"             :[2, { "initialized": "never" }],
      "quotes"              :[2, "single" ],
      "semi"                :[2, "always" ],
      "keyword-spacing"     : 2,
      "space-before-blocks" : 2,
      "space-infix-ops"     : 2,
      "space-unary-ops"     :[2, { "words": true }],
      "strict"              : 0,
      "valid-jsdoc"         : 2
    }
  }
}
